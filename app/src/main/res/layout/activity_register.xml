<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.subpraka.myapplication.activity.RegisterActivity"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="100dp">

    <EditText
        android:id="@+id/name_rgpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Name"
        android:textColor="#FBFCFC"
        android:textSize="20sp"
        android:textColorHint="#B3B6B7"
        android:inputType="textPersonName"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />

    <EditText
        android:id="@+id/email_rgpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:hint="Email"
        android:textColor="#FBFCFC"
        android:textColorHint="#B3B6B7"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_rgpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:hint="Password"
        android:textColor="#FBFCFC"
        android:textColorHint="#B3B6B7"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/cnf_Password_rgpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20sp"
        android:hint="Confirm password"
        android:textColor="#FBFCFC"
        android:textColorHint="#B3B6B7"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegister_rgpage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#D81B60"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btnLinkToLoginScreen"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Already registered? Click here to Login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:textColor="#FBFCFC"
        android:textSize="17sp"
        android:textAllCaps="false"/>

</LinearLayout>
    </ScrollView>
</RelativeLayout>
